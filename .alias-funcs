### Functions ###

function base { echo "ibase=$1; obase=$2; $3" | bc }

function start { /etc/init.d/$@ start }
function stop { /etc/init.d/$@ stop }
function restart { /etc/init.d/$@ restart }
function pause { /etc/init.d/$@ pause }

function usage() { du -skch $@ | sort -rh }

function freq() {
	cpufreq-set -f $1Mhz -c 0
	cpufreq-set -f $1Mhz -c 1
}
alias 1000="freq 1000"
alias 1333="freq 1333"
alias 1666="freq 1666"
alias 2000="freq 2000"

function cl() { cd $@; ls }

function ..() {
	for ((j=${1:-1},i=0;i<j;i++));do
		builtin cd ..;
	done;
}
alias ..2=".. 2"
alias ..3=".. 3"
alias ..4=".. 4"
alias ..5=".. 5"
alias ...=".. 2"
alias ....=".. 3"

youtube-mp3() {
	url=$1
	file=$(youtube-dl -s -e $url);
	echo "Downloading $file"
	wget -q -O - `youtube-dl -b -g $url`| ffmpeg -i - -f mp3 -vn -acodec libmp3lame - > "$file.mp3"
}

pdf()		{ epdfview "$@" 2> /dev/null }
