"2.2 (created: 2009/10/28 19:04:27)

set gui=none,tabs
set activate=homepage,quickmark,paste,tabopen
set runtimepath=/home/aparicio/.vimperator
source! /home/aparicio/.vimperatorrc.local
highlight StatusLine color: black;
let mapleader = ","

javascript <<EOF
var state = 1;
function toggleGUI() {
	if (state == 1) {
		liberator.execute(":set gui=all")
		state = 2
	} else if (state == 2) {
		liberator.execute(":set gui=none,tabs")
		state = 1
	}
}
EOF

javascript <<EOF
function wikipedia() {
	let text = util.readFromClipboard();
	liberator.execute(":wiki " + text);
}
EOF

command! -nargs=* wiki tabopen wikipedia <args>
command! -nargs=* imdb tabopen imdb <args>

cmap <C-Return> .com<CR>

map b :back<CR>
map <Tab> :tabnext<CR>
map <S-Tab> :tabprevious<CR>
map "<" :tabmove! -1<CR>
map ">" :tabmove! +1<CR>
map <C-n> :javascript toggleGUI()<CR>

map s :javascript wikipedia()<CR>
map <C-l> :open<Space>
map <Leader>w :wiki<Space>
map <Leader>i :imdb<Space>

" https://github.com/vimperator/vimperator-labs/issues/590
js services.services.autoCompleteSearch.class_="@mozilla.org/autocomplete/search;1?name=unifiedcomplete"

" vim: set ft=vimperator:
